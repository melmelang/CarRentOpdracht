@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Loc
@model CarRentingProject_Melvin.Models.RentedCars

@{
    ViewData["Title"] = @Loc["Delete"];
}

<h1>@Loc["Delete"]</h1>

<h3>@Loc["Are you sure you want to delete this?"]</h3>
<div>
    <h4>@Loc["Rented cars"]</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Loc["Cars"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cars.Brand)
        </dd>
        <dt class = "col-sm-2">
            @Loc["Tenant"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Tenant.FirstName)
        </dd>
        <dt class = "col-sm-2">
            @Loc["Ride time"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RideTime)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="@Loc["Delete"]" class="btn btn-danger" /> |
        <a asp-action="Index">@Loc["Back to List"]</a>
    </form>
</div>
