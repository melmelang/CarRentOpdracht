@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Loc
@model CarRentingProject_Melvin.Models.RentedCars

@{
    ViewData["Title"] = @Loc["Details"];
}

<h1>@Loc["Details"]</h1>

<div>
    <h4>@Loc["Rented cars"]</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Loc["Cars"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cars.Brand)
        </dd>
        <dt class = "col-sm-2">
            @Loc["Tenant"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Tenant.FirstName)
        </dd>
        <dt class = "col-sm-2">
            @Loc["Ride time"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RideTime)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">@Loc["Edit"]</a> |
    <a asp-action="Index">@Loc["Back to List"]</a>
</div>
