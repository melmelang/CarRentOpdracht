@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Loc
@model CarRentingProject_Melvin.Models.Cars

@{
    ViewData["Title"] = @Loc["Delete"];
}

<h1>@Loc["Delete"]</h1>

<h3>@Loc["Are you sure you want to delete this?"]</h3>
<div>
    <h4>@Loc["Cars"]</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Loc["Brand"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Brand)
        </dd>
        <dt class = "col-sm-2">
            @Loc["Model"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Model)
        </dd>
        <dt class = "col-sm-2">
            @Loc["Price"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            @Loc["ProductionDate"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductionDate)
        </dd>
        <dt class = "col-sm-2">
            @Loc["Mileage"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Mileage)
        </dd>
        <dt class = "col-sm-2">
            @Loc["Renter"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Renter.FirstName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="@Loc["Delete"]" class="btn btn-danger" /> |
        <a asp-action="Index">@Loc["Back to List"]</a>
    </form>
</div>
