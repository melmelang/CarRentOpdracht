@page
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Loc
@using CarRentingProject_Melvin.Models
@model IndexModel
@{
    ViewData["Title"] = @Loc["Profile"];
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Username" class="form-control" disabled />
                <label asp-for="Username" class="form-label">@Loc["User Name"]</label>
            </div>
            <div class="form-floating">
                <input asp-for="Input.FirstName" class="form-control" />
                <label asp-for="Input.FirstName" class="form-label">@Loc["Firstname"]</label>
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.LastName" class="form-control" />
                <label asp-for="Input.LastName" class="form-label">@Loc["Lastname"]</label>
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <label asp-for="Input.PhoneNumber" class="form-label">@Loc["Phone Number"]</label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <select asp-for="Input.LangId" class="form-control">
                    @foreach (Language l in (List<Language>)ViewData["Languages"])
                    {
                        <option value=@l.AppLangId>@l.AppLangName</option>
                    }
                </select>
                <label asp-for="Input.LangId" class="form-label">@Loc["Language choice"]</label>
            </div>
            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">@Loc["Save"]</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
